{
    "extends": [
      "eslint:recommended"
    ],
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "parser": "babel-eslint",
    "rules": {
      "no-console": "off",
      "strict": ["error", "global"],
      "curly": "warn",
      "prefer-const": ["error"]
    },
    "globals": {
      "test": "readonly",
      "jest": "readonly",
      "expect": "readonly",
      "describe": "readonly",
      "beforeAll": "readonly",
      "afterAll": "readonly",
      "beforeEach": "readonly",
      "afterEach": "readonly"
    }
  }